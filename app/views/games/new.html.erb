<div class="container">
  <h1>New game!</h1>

  <div class="letters-container">
    <% @letters.each do |letter| %>
      <div class="div-letter">
        <span><%= letter %></span>
      </div>
    <% end %>
  </div>

  <h2>What is the longest word you can find with these letters?</h2>
  <form action="score" method="post" class="word-form">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :grid, @letters %>
    <input type="text" name="word" id="word-input" maxlength="10">
    <input type="submit" value="Enter">
  </form>
</div>
